# MedLink Analytics - Clean URL Configuration
# Remove .php extensions from URLs

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS (SSL)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Force non-www (remove www) - RECOMMENDED
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # Remove trailing slash from URLs (optional but recommended)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]

    # -------------------------------------------------------
    # BYPASS: WordPress core files - do NOT rewrite these
    # Covers admin-ajax.php, wp-login.php, wp-cron.php, etc.
    # This fixes the 403 error on admin-ajax.php (AJAX calls)
    # -------------------------------------------------------
    RewriteCond %{REQUEST_URI} ^/blog/wp-(admin|login|cron|signup|activate|comments-post|trackback|mail|app|atom|feed|rdf|rss|rss2|json|xmlrpc)\.php [NC]
    RewriteRule ^ - [L]

    RewriteCond %{REQUEST_URI} ^/blog/wp-admin/ [NC]
    RewriteRule ^ - [L]

    # MAIN RULE: Remove .php extension
    # If the request is for a file that doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # But a .php file with that name does exist
    RewriteCond %{REQUEST_FILENAME}.php -f
    # Then serve the .php file
    RewriteRule ^(.+)$ $1.php [L,QSA]

    # Redirect old .php URLs to clean URLs
    # EXCEPTION: Skip WordPress core .php files before redirecting
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/blog/wp-(admin|login|cron|signup|activate|comments-post|trackback|mail|app|atom|feed|rdf|rss|rss2|json|xmlrpc)\.php [NC]
    RewriteRule ^ - [L]

    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
    RewriteRule ^ %1 [R=301,L]

    # Special handling for index.php - redirect to homepage
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/index\.php [NC]
    RewriteRule ^index\.php$ / [R=301,L]

</IfModule>

# Prevent directory browsing
Options -Indexes

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Disable server signature
ServerSignature Off

# Block access to sensitive files
<FilesMatch "(^\.htaccess|^\.htpasswd|\.sql|\.log|\.bak|\.env|\.git|\.svn|composer\.json|composer\.lock|package\.json|yarn\.lock)$">
    Require all denied
</FilesMatch>

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching for better performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>
